@model IEnumerable<Bootstrap1.Models.ViewModel.CatagoriesViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1 class="offset-1">Categories List</h1>

    <p class="offset-9 pl-3">
        <a asp-action="Create" class="btn btn-secondary"><i class="fas fa-plus-square"></i> Create New</a>
    </p>

    <div class="row">
        <div class="offset-1"></div>
        <div class="col-md-10">
            <table class=" table table-bordered text-center">
                <thead>
                    <tr style="background-color: lightgrey ">

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Stock)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>

                                <span>
                                    <a asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </span>
                                <span>
                                    <a asp-action="Details" asp-route-id="@item.Id">

                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </span>
                                <span>
                                    <a asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    
                                    </a>
                                </span>
                                
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="offset-1"></div>
    </div>
</div>