<div class="container-fluid">
    <section class="top-letest-product-section">
        <div class="container">
            <div class="section-title">
                <h2>LATEST PRODUCTS</h2>
            </div>
            <div class="product-slider owl-carousel">

                @foreach (var item in Model)
                {
                    var photoPath = "~/img/" + (item.Image ?? "55.jpg");
                    <div class="product-item">
                        <div class="pi-pic">
                            <img src=@photoPath asp-append-version="true" alt="" style="height: 370px; width: 764px;">
                            <div class="pi-links">

                                <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id" title="View"><i class="fas fa-eye"></i></a>
                                @*<a href="#" title="Delete"><i class="fas fa-trash"></i></a>*@
                            </div>
                        </div>
                        <div class="pi-text">
                            <h6>৳@item.Price</h6>
                            <p>@item.Name </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="product-filter-section">
        <div class="container">
            <div class="section-title">
                <h2>BROWSE TOP SELLING PRODUCTS</h2>
            </div>
            <ul class="product-filter-menu">
                <li><a href="#">TOPS</a></li>
                <li><a href="#">JUMPSUITS</a></li>
                <li><a href="#">LINGERIE</a></li>
                <li><a href="#">JEANS</a></li>
                <li><a href="#">DRESSES</a></li>
                <li><a href="#">COATS</a></li>
                <li><a href="#">JUMPERS</a></li>
                <li><a href="#">LEGGINGS</a></li>
            </ul>
            <div class="row">
                @{
                    var i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    var photoPath = "~/img/" + (item.Image ?? "55.jpg");
                    <div class="col-lg-3 col-sm-6">
                        <div class="product-item">
                            <div class="pi-pic">
                                <img src=@photoPath asp-append-version="true" alt="" style="height: 400px; width: 764px;">

                                <div class="pi-links">
                                    <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                    <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                                    <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id" title="View"><i class="fas fa-eye"></i></a>
                                </div>
                            </div>
                            <div class="pi-text">
                                <h6 style="padding-right: 5px;">৳@item.Price</h6>
                                <p>@item.Name </p>
                            </div>
                        </div>
                    </div>
                    if (i == 8)
                    {
                        break;

                    }

                }

            </div>
            <div class="text-center pt-5">

                <a asp-action="Index" asp-controller="Product" class="site-btn sb-line sb-dark">Load More</a>

            </div>
        </div>
    </section>
    <section class="banner-section">
        <div class="container">
            <div class="banner set-bg" data-setbg="/Imgs/banner-bg.jpg">
                <div class="tag-new">NEW</div>
                <span>New Arrivals</span>
                <h2>STRIPED SHIRTS</h2>
                <a asp-action="Index" asp-controller="Product" class="site-btn">SHOP NOW</a>
            </div>
        </div>
    </section>
</div>


