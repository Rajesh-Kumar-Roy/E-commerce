@model Bootstrap1.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photopath = "~/img/" + (Model.Image ?? "55.jpg");
}
<br/>
<div class="container">
<h1>Remove</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <table class="table table-bordered table-striped text-center">
        <tr style="background-color: lightgrey;">
            <th>@Html.DisplayNameFor(model => model.Image)</th>
            <th> @Html.DisplayNameFor(model => model.Name)</th>
            <th> @Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Size)</th>
            <th>@Html.DisplayNameFor(model => model.ProductModel)</th>
            <th>@Html.DisplayNameFor(model => model.Catagories.Name)</th>
           
        </tr>
        <tr>
            <td> <img src="@photopath" asp-append-version="true" alt="img"style="height: 60px; width: 80px;"/></td>
                <td style="padding-top: 25px;"> @Html.DisplayFor(model => model.Name)</td>
                <td style="padding-top: 25px;"> @Html.DisplayFor(model => model.Price)</td>
                <td style="padding-top: 25px;">@Html.DisplayFor(model => model.Size)</td>
                <td style="padding-top: 25px;">@Html.DisplayFor(model => model.ProductModel)</td>
                <td style="padding-top: 25px;">@Html.DisplayFor(model => model.Catagories.Name)</td>
           
    </table>
   
    
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger"asp-route-id="@Model.Id" /> &nbsp;
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</div>