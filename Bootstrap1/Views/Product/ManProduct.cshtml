@model IEnumerable<Bootstrap1.Models.Product>

@{
    ViewData["Title"] = "Man Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-top-info">
    <div class="container">
        <h4>Product </h4>
        <div class="site-pagination">
            <a href="">Home</a> /
            <a href="">Shop</a> /
        </div>
    </div>

</div>
<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            var photoPath = "~/img/" + (item.Image ?? "55.jpg");
            <div class="col-lg-3 col-sm-6">
                <div class="product-item">
                    <div class="pi-pic">
                        <img src="@photoPath" asp-append-version="true" alt="" style="height: 380px;width: 664px">
                        <div class="pi-links">
                            <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                            <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                        </div>
                    </div>
                    <div class="pi-text">
                        <h6>৳@item.Price</h6>
                        <p>@item.Name </p>
                    </div>
                </div>
            </div>

        }
    </div>

</div>






